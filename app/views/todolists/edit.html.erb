<h1>編集画面</h1>
<%= form_for(@list, url:"/books/#{@list.id}") do |f| %>
    <h4>Title</h4>
    <%= f.text_field :title %>
    <h4>Body</h4>
    <%= f.text_area :body %>
    <%= f.submit 'updsate Book' %>
<% end %>

<% if @list.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <ul>
      <% @list.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

 <%= link_to "show",  book_path(@list.id)%>
 <%= link_to "Back",  books_path%>
